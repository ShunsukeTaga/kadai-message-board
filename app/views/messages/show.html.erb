<h1>id: <%= @message.id %></h1>

<table class="table table-bordered">
    <tr>
        <th>id</th>
        <td><%= @message.id %></td>
    </tr>
    <tr>
        <th>タイトル</th>
        <td><%= @message.title %></td>
    </tr>
    <tr>
        <th>メッセージ</th>
        <td><%= @message.content %></td>
    </tr>
</table>
<p>タイトル: <%= @message.title %></p>
<p>メッセージ: <%= @message.content %></p>

<!--<%= link_to '一覧に戻る', messages_path %>-->
<%= link_to 'このメッセージを編集する', edit_message_path(@message), class: 'btn btn-light' %>
<%= link_to 'このメッセージを削除する', @message, method: :delete, data: { confirm: '本当に削除してよろしいですか' }, class: 'btn btn-danger' %>